<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Árbol -->
    <record id="view_herbario_image_tree" model="ir.ui.view">
        <field name="name">herbario.image.tree</field>
        <field name="model">herbario.image</field>
        <field name="arch" type="xml">
            <tree string="Imágenes del Herbario">
                <field name="thumbnail" widget="image" width="80"/>
                <field name="filename_original"/>
                <field name="specimen_id"/>
                <field name="description"/>
                <field name="file_size_human"/>
                <field name="resolution"/>
                <field name="is_primary" widget="boolean_toggle"/>
                <!--<field name="created_at"/>-->
                <button name="action_set_as_primary" type="object" string="Principal" icon="fa-star" invisible="is_primary"/>
            </tree>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="view_herbario_image_form" model="ir.ui.view">
        <field name="name">herbario.image.form</field>
        <field name="model">herbario.image</field>
        <field name="arch" type="xml">
            <form string="Imagen de Espécimen">
                <header>
                    <button name="action_set_as_primary" string="Establecer como Principal" type="object" class="oe_highlight" icon="fa-star" invisible="is_primary"/>
                    <!--button name="action_optimize_image" string="Optimizar Imagen" type="object" icon="fa-compress"/>
                    <button name="action_download" string="Descargar Original" type="object" icon="fa-download"/>-->
                </header>
                <sheet>
                    <field name="image_data" widget="image" class="oe_avatar" options="{'preview_image': 'image_data', 'size': [0, 600]}"/>
                    
                    <div class="oe_title">
                        <label for="filename_original"/>
                        <h1><field name="filename_original"/></h1>
                    </div>

                    <group>
                        <group string="Información General">
                            <field name="specimen_id" options="{'no_create': True}"/>
                            <field name="description" placeholder="Descripción de la imagen..."/>
                            <field name="is_primary"/>
                        </group>
                        <group string="Metadatos Técnicos">
                            <field name="file_size"/>
                            <field name="file_size_human" readonly="1"/>
                            <field name="mime_type" readonly="1"/>
                            <field name="resolution" readonly="1"/>
                            <field name="image_width" readonly="1"/>  <!-- Cambio aquí: de "width" a "image_width" -->
                            <field name="image_height" readonly="1"/>  <!-- Cambio aquí: de "height" a "image_height" -->
                        </group>
                    </group>

                    <group>
                        <group string="Información de Captura">
                            <field name="exif_camera" readonly="1"/>
                            <field name="exif_date" readonly="1"/>
                        </group>
                        <group string="Descripción y Orden">
                            <field name="display_order"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Metadatos EXIF" invisible="not exif_data">
                            <field name="exif_data" widget="text"/>
                        </page>
                        <page string="Miniaturas Generadas">
                            <group>
                                <group string="Miniatura Pequeña">
                                    <field name="thumbnail" widget="image" readonly="1"/>
                                </group>
                                <group string="Miniatura Mediana">
                                    <field name="thumbnail_medium" widget="image" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Auditoría">
                            <group>
                                <group>
                                    <field name="uploaded_by" readonly="1"/>
                                    <field name="uploaded_at" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban (Galería) -->
    <record id="view_herbario_image_kanban" model="ir.ui.view">
        <field name="name">herbario.image.kanban</field>
        <field name="model">herbario.image</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="filename_original"/>
                <field name="specimen_id"/>
                <field name="image_data"/>
                <field name="is_primary"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <div class="o_kanban_image_wrapper">
                                    <img t-att-src="kanban_image('herbario.image', 'thumbnail', record.id.raw_value)" alt="Imagen"/>
                                </div>
                            </div>
                            <div class="o_kanban_details">
                                <div class="o_kanban_details_wrapper">
                                    <div class="o_kanban_record_title">
                                        <field name="filename_original"/>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="specimen_id"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="file_size_human"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <span t-if="record.is_primary.raw_value" class="badge badge-success">
                                                <i class="fa fa-star"/> Principal
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de Búsqueda -->
    <record id="view_herbario_image_search" model="ir.ui.view">
        <field name="name">herbario.image.search</field>
        <field name="model">herbario.image</field>
        <field name="arch" type="xml">
            <search string="Buscar Imágenes">
                <field name="filename_original"/>
                <field name="specimen_id"/>
                <field name="description"/>
                <field name="photographer"/>
                
                <filter name="filter_primary" string="Imágenes Principales" domain="[('is_primary', '=', True)]"/>
                <filter name="filter_recent" string="Recientes" domain="[('created_at', '>', (context_today().strftime('%Y-%m-%d')))]"/>  <!-- Si aún causa problemas, simplifícalo o quítalo -->
                
                <separator/>
                <filter name="filter_type_general" string="General" domain="[('image_type', '=', 'general')]"/>
                <filter name="filter_type_flower" string="Flor" domain="[('image_type', '=', 'flower')]"/>
                <filter name="filter_type_fruit" string="Fruto" domain="[('image_type', '=', 'fruit')]"/>
                <filter name="filter_type_leaf" string="Hoja" domain="[('image_type', '=', 'leaf')]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter name="group_specimen" string="Espécimen" context="{'group_by': 'specimen_id'}"/>
                    <filter name="group_type" string="Tipo de Imagen" context="{'group_by': 'image_type'}"/>
                    <filter name="group_photographer" string="Fotógrafo" context="{'group_by': 'photographer'}"/>
                    <filter name="group_date" string="Fecha de Captura" context="{'group_by': 'created_at'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_herbario_image" model="ir.actions.act_window">
        <field name="name">Galería de Imágenes</field>
        <field name="res_model">herbario.image</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Subir la primera imagen del herbario
            </p>
            <p>
                Gestione las imágenes de los especímenes con información detallada y miniaturas automáticas.
            </p>
        </field>
    </record>
</odoo>