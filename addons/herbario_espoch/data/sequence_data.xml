<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==================== SECUENCIA PARA CÓDIGO DE HERBARIO ==================== -->
    <record id="sequence_herbario_specimen_code" model="ir.sequence">
        <field name="name">Código de Espécimen Herbario</field>
        <field name="code">herbario.specimen.code</field>
        <field name="prefix">HERB-</field>
        <field name="padding">6</field>
        <field name="number_increment">1</field>
        <field name="number_next">1</field>
        <field name="implementation">standard</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- ==================== SECUENCIA PARA NÚMERO DE COLECCIÓN ==================== -->
    <record id="sequence_collection_number" model="ir.sequence">
        <field name="name">Número de Colección</field>
        <field name="code">herbario.collection.number</field>
        <field name="prefix">COL-</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
        <field name="number_next">1</field>
        <field name="implementation">standard</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- ==================== SECUENCIA PARA CÓDIGO QR ==================== -->
    <record id="sequence_qr_code" model="ir.sequence">
        <field name="name">Código QR</field>
        <field name="code">herbario.qr.code</field>
        <field name="prefix">QR-HERB-</field>
        <field name="padding">8</field>
        <field name="number_increment">1</field>
        <field name="number_next">1</field>
        <field name="implementation">standard</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- ==================== SECUENCIA PARA NÚMERO DE CARTULINA ==================== -->
    <record id="sequence_cartulina_number" model="ir.sequence">
        <field name="name">Número de Cartulina</field>
        <field name="code">herbario.cartulina.number</field>
        <field name="prefix">CART-</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
        <field name="number_next">1</field>
        <field name="implementation">standard</field>
        <field name="company_id" eval="False"/>
    </record>

